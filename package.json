{
	"name": "@aytacmalkoc/react-use-storage",
	"version": "1.0.5",
	"description": "Basic storage management for React applications using localStorage & hooks.",
	"repository": "aytacmalkoc/react-use-storage",
	"license": "MIT",
	"main": "dist/index.js",
	"scripts": {
		"build": "rollup -c",
		"publish": "npm run prettier-format && npm run build && npm publish --access public",
		"lint": "eslint . --ext .ts",
		"prettier-format": "prettier --config .prettierrc src/**/*.ts --write",
		"prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}"
	},
	"keywords": [
		"react",
		"use-storage",
		"react hooks",
		"react-cache"
	],
	"author": {
		"name": "Aytac Malkoc",
		"email": "aytacmalkoc@protonmail.com",
		"url": "https://www.aytacmalkoc.com.tr"
	},
	"peerDependencies": {
		"react": ">=16.8.0"
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "^8.3.3",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"onchange": "^7.1.0",
		"prettier": "^2.7.1",
		"react": "^18.2.0",
		"rollup": "^2.46.0",
		"rollup-plugin-typescript2": "^0.32.1",
		"tslib": "^2.4.0",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"@types/crypto-js": "^4.1.1",
		"crypto-js": "^4.1.1"
	}
}